# Configuration serveur
PORT=3005
NODE_ENV=development

# Clé secrète pour les sessions (CHANGEZ CETTE VALEUR EN PRODUCTION)
SESSION_SECRET=your-super-secret-session-key-change-this

# Clé secrète JWT pour l'authentification (CHANGEZ EN PRODUCTION)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Twitter API Configuration (Remplacez par vos vraies clés)
X_API_KEY=your_twitter_api_key_here
X_API_SECRET=your_twitter_api_secret_here
X_ACCESS_TOKEN=your_twitter_access_token_here
X_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret_here
X_BEARER_TOKEN=your_twitter_bearer_token_here

# OAuth2 Configuration
OAUTH2_CLIENT_ID=your-oauth2-client-id
OAUTH2_CLIENT_SECRET=your-oauth2-client-secret
OAUTH2_REDIRECT_URI=http://localhost:3005/oauth2/callback

# Configuration Redis (optionnel)
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false

# Configuration IA (optionnel)
OPENAI_API_KEY=your-openai-api-key-here
AI_ENABLED=false

# Configuration de chiffrement
ENCRYPTION_KEY=your-32-character-encryption-key-here
# Si non définie, une clé sera générée automatiquement

# Polling Automation
# Intervalle principal entre les scans (par défaut 600000 ms = 10 min)
# POLL_INTERVAL_MS=600000

# Configuration Perplexity AI (pour génération de commentaires)
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Configuration du serveur
# PORT=3001

# Configuration Redis (Cache)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password_here

# Configuration Chiffrement
# ENCRYPTION_KEY=your_256_bit_hex_key_here
# Si non définie, une clé sera générée automatiquement

# Polling Automation
# Intervalle principal entre les scans (par défaut 600000 ms = 10 min)
# POLL_INTERVAL_MS=600000
# Délai du premier tick après l'exécution immédiate (warm-up). Ex: 30000 = 30s
# POLL_FIRST_DELAY_MS=45000

# Accélération/Ralentissement global des délais d'action (>=1). 1 = plus rapide
# ACTION_DELAY_FACTOR=2

# Configuration Alertes Email
ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_HOST=smtp.gmail.com
ALERT_EMAIL_PORT=587
ALERT_EMAIL_SECURE=false
ALERT_EMAIL_USER=your_email@gmail.com
ALERT_EMAIL_PASS=your_app_password
ALERT_EMAIL_FROM=your_email@gmail.com
ALERT_EMAIL_TO=admin@yourcompany.com

# Configuration Alertes Slack
ALERT_SLACK_ENABLED=false
ALERT_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
ALERT_SLACK_CHANNEL=#automation-alerts

# Configuration des Logs
LOG_LEVEL=INFO
LOG_FILTER_DETAILS=false
LOG_BATCH_SUMMARY=true
LOG_FORMAT=unified
